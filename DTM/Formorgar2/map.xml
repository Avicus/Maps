<?xml version="1.0" encoding="UTF-8"?>
<map name="Formorgar 2" spec="1.0.0" version="1.1.0">
  <include src="defaults.xml"/>
  <gametype>dtm</gametype>
  <authors>
    <author uuid="da98a2f1673c4cecb547e0a342abfde4"/> <!-- timaeusTestified -->
