  <teams>
    <team color="yellow" id="yellow" max="25" min="1">{colors.yellow}</team>
    <team color="purple" id="purple" max="25" min="1">{colors.purple}</team>
  </teams>
  <spawns>
    <spawn yaw="-90">
      <regions>
        <circle center="-70, 115, 129" radius="1"/>
      </regions>
    </spawn>
    <spawn loadout="default" team="yellow" yaw="0">
      <regions>
        <circle center="7, 81, 24" radius="2"/>
      </regions>
    </spawn>
    <spawn loadout="default" team="purple" yaw="180">
      <regions>
        <circle center="7, 81, 234" radius="2"/>
      </regions>
    </spawn>
  </spawns>
  <objectives>
    <monuments materials="obsidian">
      <monuments owner="yellow">
        <monument name="{directions.left}">
          <region>
            <block>-23, 87, 7</block>
          </region>
        </monument>
        <monument name="{directions.right}">
          <region>
            <block>37, 87, 7</block>
          </region>
        </monument>
      </monuments>
      <monuments owner="purple">
        <monument name="{directions.left}">
          <region>
            <block>37, 87, 251</block>
          </region>
        </monument>
        <monument name="{directions.right}">
          <region>
            <block>-23, 87, 251</block>
          </region>
        </monument>
      </monuments>
    </monuments>
  </objectives>
