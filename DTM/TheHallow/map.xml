    <zone modify="never">
      <region>
        <cylinder base="39, 106, -228" height="20" radius="10"/>
      </region>
      <message>{errors.spawn-restricted}</message>
    </zone>
  </zones>
  <loadouts>
    <loadout id="default">
      <effect amplifier="5" duration="5s">damage resistance</effect>
      <helmet material="leather helmet" team-color="true"/>
