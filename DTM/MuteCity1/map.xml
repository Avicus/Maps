          <block>20, 20, -26</block>
        </region>
      </monument>
      <monument break-check="only-yellow" id="yellow-right" name="{directions.right}">
        <region>
          <block>80, 20, 34</block>
        </region>
      </monument>
      <monument break-check="only-blue" id="blue-left" name="{directions.left}">
        <region>
          <block>-14, 20, 34</block>
