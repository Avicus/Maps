<?xml version="1.0" encoding="UTF-8"?>
<map name="Flooded Halcyon" spec="1.0.0" version="1.0.0">
  <include src="defaults.xml"/>
  <include src="Shared/tutorials/dtm.xml"/>
  <authors>
    <author uuid="8242e55ecc6a458ab272a2b34918045f"/> <!-- funkystudios -->
    <author contributor="true" uuid="0b8f95fa0f404f289fd0b8e243bb6800"/>  <!-- Fouled -->
    <author contributor="true" uuid="eb1216878b1a4944bd4de0a818d9dfe2"/> <!-- Kashike -->
  </authors>
  <tutorial>
    <step countdown="5s" freeze="false" location="14, 16, -870" pitch="71" yaw="179">
      <chat>
        <line>^r • {tutorial.generic.team-spawns}</line>
      </chat>
    </step>
    <step countdown="4s" location="-10, 11, -859" pitch="60" yaw="127">
      <chat>
        <line>^r • {tutorial.dtm.monument-area}</line>
      </chat>
    </step>
    <step countdown="5s" location="14, 21, -863" pitch="90" yaw="177">
      <chat>
        <line>^r • {tutorial.dtm.monument-objective}</line>
      </chat>
    </step>
  </tutorial>
  <teams>
    <team color="purple" id="purple" max="18" min="1">{colors.purple}</team>
    <team color="red" id="red" max="18" min="1">{colors.red}</team>
  </teams>
  <spawns>
    <!-- Spectator spawn -->
    <spawn yaw="-90">
      <regions>
        <circle center="-34, 22, -816" radius="1"/>
      </regions>
    </spawn>
    <!-- Team spawns -->
    <spawn loadout="default" team="purple" yaw="0">
      <regions>
        <circle center="14, 11, -871" radius="1"/>
      </regions>
    </spawn>
    <spawn loadout="default" team="red" yaw="-180">
      <regions>
        <circle center="14, 11, -761" radius="1"/>
      </regions>
    </spawn>
  </spawns>
  <objectives>
    <monuments materials="obsidian">
      <monuments owner="purple">
        <monument name="{directions.left}">
          <region>
            <block>-13, 10, -861</block>
          </region>
        </monument>
        <monument name="{directions.right}">
          <region>
            <block>41, 10, -861</block>
          </region>
        </monument>
      </monuments>
      <monuments owner="red">
        <monument name="{directions.left}">
          <region>
            <block>41, 10, -773</block>
          </region>
        </monument>
        <monument name="{directions.right}">
          <region>
            <block>-13, 10, -773</block>
          </region>
        </monument>
      </monuments>
    </monuments>
  </objectives>
  <loadouts>
    <loadout id="default">
      <helmet material="leather helmet" team-color="true"/>
      <chestplate material="leather chestplate" team-color="true"/>
      <leggings material="iron leggings" team-color="true"/>
      <boots material="leather boots" team-color="true"/>
      <item material="stone sword" slot="0"/>
      <item material="bow" slot="1"/>
      <item material="diamond pickaxe" slot="2">
        <enchantment level="1">dig speed</enchantment>
      </item>
      <item material="stone axe" slot="3"/>
      <item amount="64" material="apple" slot="4"/>
      <item amount="1" material="golden apple" slot="5"/>
      <item amount="32" material="log" slot="6"/>
      <item amount="64" material="glass" slot="7"/>
      <item amount="64" material="arrow" slot="27"/>
    </loadout>
    <loadout id="kill-reward">
      <item material="golden apple"/>
      <item amount="4" material="arrow"/>
    </loadout>
  </loadouts>
  <kills>
    <rewards>
      <reward loadout="kill-reward"/>
    </rewards>
  </kills>
  <zones>
    <zone modify="never">
      <region>
        <invert>
          <cuboid max="-19, 0, -741" min="49, 23, -892"/>
        </invert>
      </region>
      <message>{errors.outside-map}</message>
    </zone>
    <zone modify="never">
      <region>
        <cylinder base="14, 6, -762" height="12" radius="8"/>
      </region>
      <enter>
        <team>red</team>
      </enter>
      <message>{errors.spawn-restricted}</message>
    </zone>
    <zone modify="never">
      <region>
        <cylinder base="14, 6, -872" height="12" radius="8"/>
      </region>
      <enter>
        <team>purple</team>
      </enter>
      <message>{errors.spawn-restricted}</message>
    </zone>
  </zones>
  <items>
    <remove-drops>
      <any>
        <material>leather helmet</material>
        <material>leather chestplate</material>
        <material>iron leggings</material>
        <material>leather boots</material>
        <material>apple</material>
        <material>arrow</material>
        <material>log</material>
        <material>wood</material>
      </any>
    </remove-drops>
    <repair-tools>
      <any>
        <material>stone sword</material>
        <material>bow</material>
        <material>diamond pickaxe</material>
        <material>stone axe</material>
      </any>
    </repair-tools>
  </items>
</map>
